@using KanBanVersion2.Entities
@model Todo
<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">
            @Model.todoAdi
        </h3>
        <div class="col-md-12">
            <hr />
        </div>
        <div>
            <p> @Model.todoAciklama</p>
        </div>
        <br /><br /><br />

        <div style="float:right;" class="col-md-12">
            <span class="fa fa-user"></span> @foreach (TodoKullanicisi todokullanicisi in Model.todoKullanicisi)
            {
                @todokullanicisi.kanbankullanici.kullaniciadi;
                @Html.Raw("&nbsp;");
            }
            <span class="fa fa-clock-o"></span> @Model.guncellemeTarihi
        </div>

    </div>

</div>