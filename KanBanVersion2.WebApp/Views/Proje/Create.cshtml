@model KanBanVersion2.Entities.Proje

@{
    ViewBag.Title = "Proje Oluştur";
}
<link href="~/Content/myprojectcss.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="col-md-12">
        <h2>Proje Oluştur</h2>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(false)

            <div class="form-group">
                <label class="col-md-4 control-label">Proje Adı *</label>
                <div class="col-md-5" id="txtProjeAd">
                    @Html.EditorFor(model => model.projeAd, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Proje Açıklaması *</label>
                <div class="col-md-5" id="txtAciklama">
                    @Html.TextAreaFor(model => model.projeAciklamasi,6,30, new {  @class = "form-control"  })


                </div>
            </div>


            <div class="form-group">
                <div class="col-md-3">
                    @Bootstrap.Button("success", string.Empty, "submit", "plus", "  Oluştur")
                    @Bootstrap.LinkButton("/Proje/Index", "secondary", string.Empty, string.Empty, "arrow-left", "   Listeye Dön")
                 
                </div>
            </div>


        }
        
    </div>
</div>

